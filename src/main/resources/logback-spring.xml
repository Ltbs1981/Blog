<configuration>
    <!-- Define o padrÃ£o de layout para as mensagens de log -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Define um appender para saÃ­da no console (STDOUT) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%message%n</pattern>
        </encoder>
    </appender>

    <!-- Configura o nÃ­vel de log para INFO e define o appender STDOUT -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
